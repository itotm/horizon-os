#!/bin/bash
set -oue pipefail

logger "HorizonOS user post install"

/usr/libexec/horizon-configure-bash
/usr/libexec/horizon-configure-plasma
/usr/libexec/horizon-configure-login
/usr/libexec/horizon-notify "System configuration" "Please wait, finishing setup and installing apps. The system will reboot automatically"
/usr/libexec/horizon-install-flatpaks

logger "HorizonOS user post install complete"
reboot
