#!/usr/bin/bash
set -euo pipefail

logger "Services configuration"

SERVICES=(
    "horizon-update.timer"
    "cockpit.socket"
    "podman.socket"
    "sshd"
    "tailscaled"
)

for service in "${SERVICES[@]}"; do
    systemctl enable "${service}" 2>/dev/null || true
done

logger "Services configuration completed"
